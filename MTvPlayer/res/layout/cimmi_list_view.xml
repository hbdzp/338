<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="489dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/list_menu_img_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/cimmi_title"
        android:layout_width="267dp"
        android:layout_height="35dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="@string/str_cimmi_title" />

    <TextView
        android:id="@+id/cimmi_subtitle_one"
        android:layout_width="267dp"
        android:layout_height="35dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="7dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/cimmi_subtitle_two"
        android:layout_width="267dp"
        android:layout_height="35dp"
        android:layout_marginLeft="27dp"
        android:gravity="center" />

    <ListView
        android:id="@+id/cimmi_list_view"
        android:layout_width="267dp"
        android:layout_height="233dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="8dp"
        android:listSelector="@drawable/button_state" />

    <TextView
        android:id="@+id/cimmi_text_end"
        android:layout_width="267dp"
        android:layout_height="35dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="7dp"
        android:gravity="center" />

</LinearLayout>